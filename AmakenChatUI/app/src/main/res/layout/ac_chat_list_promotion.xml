<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_16"
    android:background="@color/white">

    <include
        android:id="@+id/cv_header_promotion"
        layout="@layout/ac_chat_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/cv_content_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cv_header_promotion">

        <TextView
            android:id="@+id/tv_promotion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_16"
            android:layout_marginRight="@dimen/spacing_16"
            android:gravity="left"
            android:text="Hello this is the sample message" />

        <RelativeLayout
            android:id="@+id/rl_promotion_image_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_250"
            android:layout_below="@+id/tv_promotion_text"
            android:layout_marginBottom="@dimen/spacing_5"
            android:layout_marginLeft="@dimen/spacing_16"
            android:layout_marginRight="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_20">

            <ImageView
                android:id="@+id/is_promotion_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_250"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/tv_play"
                android:layout_width="@dimen/spacing_45"
                android:layout_height="@dimen/spacing_45"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/play_icon" />

            <ImageView
                android:id="@+id/iv_left_two"
                android:layout_width="@dimen/spacing_30"
                android:layout_height="@dimen/spacing_30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/left" />

            <ImageView
                android:id="@+id/iv_right_two"
                android:layout_width="@dimen/spacing_30"
                android:layout_height="@dimen/spacing_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_below="@+id/rl_promotion_image_layout"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_16"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="View More"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_start_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginRight="@dimen/spacing_16"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="Start Chat"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/vw_layout_below_buttons"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_btn_layout"
            android:layout_marginBottom="@dimen/spacing_15"
            android:layout_marginTop="@dimen/spacing_30"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/rl_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_layout_below_buttons"
            android:layout_marginBottom="@dimen/spacing_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/spacing_20"
                android:layout_height="@dimen/spacing_20"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_5"
                android:layout_toLeftOf="@+id/tv_comment_value"
                android:src="@drawable/chat" />

            <TextView
                android:id="@+id/tv_comment_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_30"
                android:layout_toLeftOf="@+id/iv_like"
                android:src="@drawable/view"
                android:text="1033" />


            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="@dimen/spacing_20"
                android:layout_height="@dimen/spacing_20"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_5"
                android:layout_toLeftOf="@+id/tv_like_value"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/tv_like_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_30"
                android:layout_toLeftOf="@+id/iv_view"
                android:src="@drawable/view"
                android:text="1012" />

            <ImageView
                android:id="@+id/iv_view"
                android:layout_width="@dimen/spacing_30"
                android:layout_height="@dimen/spacing_20"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/view" />

            <TextView
                android:id="@+id/tv_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_5"
                android:layout_toRightOf="@+id/iv_view"
                android:src="@drawable/view"
                android:text="12K" />

            <ImageView
                android:id="@+id/iv_upload"
                android:layout_width="@dimen/spacing_20"
                android:layout_height="@dimen/spacing_20"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_30"
                android:layout_toRightOf="@+id/tv_view_value"
                android:src="@drawable/upload" />

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="@dimen/spacing_20"
                android:layout_height="@dimen/spacing_20"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_60"
                android:layout_toRightOf="@+id/iv_upload"
                android:src="@drawable/help" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>